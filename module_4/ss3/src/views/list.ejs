<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
    </style>
</head>
<body>
<div class="container">
    <button class="btn btn-primary mt-3 mb-3" onclick="window.location.href='/create'">Create</button>
    <div class="row">
        <% for (const val of data) { %>
        <div class="col-4 mt-3">
            <div class="card" style="width: 25rem;">
                <div class="card-body" style="height: 200px">
                    <h5 class="card-title"><%= val.title %></h5>
                    <p class="card-text"><%= val.content %></p>
                    <a href="#" class="btn btn-danger card-bottom" onclick="openModal(<%= val.id %>, '<%= val.title %>')">Delete</a>
                    <a href="#" class="btn btn-warning card-bottom" onclick="window.location.href='/update/<%= val.id %>'">Update</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
<form method="post" action="delete">
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Employee</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <input type="hidden" id="idBlog" name="idBlog" value="">
                <div class="modal-body">
                    Are you sure delete Blog with content is <span id="title" style="color: red"> ?</span>
                </div>
                <div class="modal-footer">
                    <b style=";color:red;">(*) This action cannot be undone</b> <br>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
<script>
    <% if(success == "create") { %>
    Swal.fire({
        position: 'center',
        icon: 'success',
        title: 'Add Blog successfully!',
        showConfirmButton: false,
        timer: 2000
    })
    <% } %>
    <% if(success == "delete") { %>
    Swal.fire({
        position: 'center',
        icon: 'success',
        title: 'Remove Blog successfully!',
        showConfirmButton: false,
        timer: 2000
    })
    <% } %>

    <% if(success == "update") { %>
    Swal.fire({
        position: 'center',
        icon: 'success',
        title: 'Update Blog successfully!',
        showConfirmButton: false,
        timer: 2000
    })
    <% } %>
    function openModal(id, title) {
        document.getElementById("title").innerText = title;
        document.getElementById("idBlog").value = id;
        $('#deleteModal').modal('toggle');
    }
</script>

</body>
</html>
